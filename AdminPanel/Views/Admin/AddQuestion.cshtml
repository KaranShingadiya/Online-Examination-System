@model AdminPanel.Models.Exam
@{
    ViewBag.Title = "AddQuestion";
}

<h2>AddQuestion</h2>
<br />
<br />
@if (@TempData["success"] != null)
{
    <span class="alert alert-success">@TempData["success"]</span>
}
else
{
    <span class="alert alert-danger">@TempData["error"]</span>
}
<br />
<br />

<html>
<head>
    <style>
        .centered-from {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            width: 350px;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="centered-from">
        <div class="form-container">
            <form action="@Url.Action("AddQuestion","Admin")" method="post">
                <h3>Add Question</h3>

                <div class="form-group">

                    @Html.Label("Question")
                    @Html.TextBoxFor(model => model.exam_Question, new { @class = "form-control", @placeholder = "Input Question" })
                    @Html.ValidationMessageFor(model => model.exam_Question, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.Label("Option-1")
                    @Html.TextBoxFor(model => model.exam_Option_1, new { @class = "form-control", @placeholder = "Input Option-1" })
                    @Html.ValidationMessageFor(model => model.exam_Option_1, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Option-2")
                    @Html.TextBoxFor(model => model.exam_Option_2, new { @class = "form-control", @placeholder = "Input Option-2" })
                    @Html.ValidationMessageFor(model => model.exam_Option_2, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Option-3")
                    @Html.TextBoxFor(model => model.exam_Option_3, new { @class = "form-control", @placeholder = "Input Option-3" })
                    @Html.ValidationMessageFor(model => model.exam_Option_3, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Option-4")
                    @Html.TextBoxFor(model => model.exam_Option_4, new { @class = "form-control", @placeholder = "Input Option-4" })
                    @Html.ValidationMessageFor(model => model.exam_Option_4, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.Label("Correct Answer")
                    @Html.TextBoxFor(model => model.exam_CorrectAnswer, new { @class = "form-control", @placeholder = "Input Correct Answer" })
                    @Html.ValidationMessageFor(model => model.exam_CorrectAnswer, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-success" >Create</button>
                <a href="@Url.Action("Admin", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
            </form>
        </div>
    </div>
</body>
</html>

