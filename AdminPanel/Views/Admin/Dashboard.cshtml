
@{
    ViewBag.Title = "Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .dashboard-container {
            padding: 20px;
            background-color: #f4f6f9;
            
        }

        .dashboard-card {
            font-size:15px;
            border-radius: 8px;
            transition: 0.3s;
            text-align: center;
            padding: 30px;
            background: white;
            margin-bottom:30px;
        }

            .dashboard-card:hover {
                background-color: #e2e6ea;
            }

        .card-title {
            font-size:20px;
            font-weight: bold;
        }
        .btn{
            font-size:1.2rem;
            border-radius:5px;
        }
    </style>
</head>
<body>
    <div class="container dashboard-container">
        <h2 class="text-center mb-4">Admin Dashboard</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="dashboard-card">
                    <h3 class="card-title">Manage Students</h3>
                    <p>Manage Student accounts and permissions.</p>
                    <a href="@Url.Action("ManageStudents", "Admin")" class="btn btn-primary">Manage Students</a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="dashboard-card">
                    <h3 class="card-title">Manage Exams</h3>
                    <p>Manage Exams and permissions.</p>
                    <a href="@Url.Action("Exams", "Admin")" class="btn btn-primary">Manage Exams</a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="dashboard-card">
                    <h3 class="card-title">Manage Course</h3>
                    <p>Manage Courses</p>
                    <a href="@Url.Action("StudyMaterials", "Admin")" class="btn btn-primary">Manage Materials</a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="dashboard-card">
                    <h3 class="card-title">Student Result</h3>
                    <p>Analyze Student Result</p>
                    <a href="@Url.Action("Notifications", "Admin")" class="btn btn-primary">Manage Notifications</a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="dashboard-card">
                    <h3 class="card-title">Student Feedbacks</h3>
                    <p>See the student Feedbacks.</p>
                    <a href="@Url.Action("Performance", "Admin")" class="btn btn-primary">View Analysis</a>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="dashboard-card">
                    <h3 class="card-title">Logout</h3>
                    <p>Press and Logout</p>
                    <a href="@Url.Action("Reports", "Admin")" class="btn btn-primary">Generate Reports</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
