@model AdminPanel.Models.Course 
@{
    ViewBag.Title = "EditCourse";
}

<h2>EditCourse</h2>

<html>
<head>
    <style>
        .centered-from {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            width: 350px;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="centered-from">
        <div class="form-container">
            <form action="@Url.Action("EditCourse","Admin")" method="post">
                <h3>Edit Course</h3>
                <div class="form-group">
                    @Html.HiddenFor(model => model.course_Id);                    
                </div>
                <div class="form-group">
                    @Html.Label("Course Name")
                    @Html.TextBoxFor(model => model.course_Name, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Edit Course</button>
                <a href="@Url.Action("Admin", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
            </form>
        </div>
    </div>
</body>
</html>

