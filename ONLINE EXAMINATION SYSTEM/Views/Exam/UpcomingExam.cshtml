@model List<ONLINE_EXAMINATION_SYSTEM.Models.Exam>
@{
    ViewBag.Title = "UpcomingExam";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .exam-card {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

            .exam-card:hover {
                transform: translateY(-5px);
            }

        .btn-primary, .btn-secondary, .btn-success {
            font-size: 1.2rem;
            padding: 3px 5px;
        }

        .exam-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .exam-date, .exam-time, .card-text {
            font-size: 1.2rem;
            color: #6c757d;
        }

        h2 {
            font-size: 2rem;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-center mb-4">Upcoming Exams</h2>

        @if (Model != null && Model.Any())
        {
            int count = 0;

            foreach (var temp in Model)
            {
                if (count % 3 == 0)
                {

                    if (count > 0)
                    {
                   @: </div>
                    } 

                @:<div class="row mb-4">
                    }

                    @:<div class="col-md-6 col-lg-4 mb-4">
                       @:<div class="card exam-card">
                           @: <div class="card-body">
                                <h5 class="exam-title">@temp.exam_Title</h5>
                                <p class="exam-date">Exam-Date : <strong>@temp.exam_StartDate.ToString("dd-MM-yyyy")</strong></p>
                                <p class="exam-time">Time-Duration : <strong>@temp.exam_Timelimit Minitue</strong></p>
                                <p class="card-text">Course : <strong>@temp.course_Name</strong> </p>
                                <p class="card-text">Class : <strong>@temp.class_Name</strong></p>                                
                                <p class="card-text">Description : <strong>@temp.exam_Description</strong></p>
                                <div class="d-flex justify-content-between mt-3">
                                <a href="#" class="btn btn-primary">View Details</a>
                                <a href="#" class="btn btn-secondary">Mark as Prepared</a>
                                <a href="#" class="btn btn-success">Register</a>
                                </div>

                           @: </div>
                       @: </div>
                 @: </div>
                    count++;
                    }
                @:</div> 
            }
            else
            {
                <p class="text-center">No exams available.</p>
            }        

            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
        </body>
    </html>
